<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginRight="8dp"
            android:elevation="2dp"
            android:clickable="true"
            android:layout_marginLeft="8dp"
            android:foreground="?selectableItemBackground"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="2dp"
            app:cardCornerRadius="3dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="42pt"
                    android:id="@+id/imageViewFoodRestaurntItem"
                    app:layout_constraintStart_toStartOf="parent"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTitleRestaurntItem" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewFoodRestaurntItem"
                    android:textColor="@color/blue"
                    android:textStyle="bold" android:textSize="16sp" android:layout_marginTop="8dp"
            />
            <TextView
                    android:text="Free delivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:elevation="2dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="@+id/imageView2"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintEnd_toEndOf="@+id/imageView2"
                    app:layout_constraintStart_toStartOf="@+id/imageView2" android:textColor="@color/white"
                    android:textStyle="bold" android:textSize="16sp"/>
            <ImageView
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:src="@drawable/circle_shape"
                    android:id="@+id/imageView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewFoodRestaurntItem"
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewFoodRestaurntItem"
                    app:layout_constraintStart_toEndOf="@+id/textView10"
                    android:layout_marginStart="32dp"/>
            <TextView
                    android:text="type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewCourseTypeRestaurntItem"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTitleRestaurntItem"
                    app:layout_constraintStart_toStartOf="@+id/textViewTitleRestaurntItem"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="45-50 mins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    app:layout_constraintStart_toEndOf="@+id/textViewCourseTypeRestaurntItem"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTitleRestaurntItem"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="No min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10" app:layout_constraintStart_toEndOf="@+id/textView9"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTitleRestaurntItem"
                    android:layout_marginTop="8dp" android:textColor="@color/green_600"
            />
            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stepSize="0.01"
                    style="?android:attr/ratingBarStyleSmall"
                    android:id="@+id/ratingBarRestaurantItem" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewCourseTypeRestaurntItem"
                    app:layout_constraintStart_toStartOf="@+id/textViewCourseTypeRestaurntItem"/>
            <TextView
                    android:text="77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewRateRestaurantItem"
                    app:layout_constraintStart_toEndOf="@+id/ratingBarRestaurantItem"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/ratingBarRestaurantItem"
                    app:layout_constraintTop_toTopOf="@+id/ratingBarRestaurantItem" android:textSize="16sp"/>
            <TextView
                    android:text="Ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12" app:layout_constraintStart_toEndOf="@+id/textViewRateRestaurantItem"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewRateRestaurantItem"
                    app:layout_constraintTop_toTopOf="@+id/textViewRateRestaurantItem" android:textSize="16sp"/>
            <TextView
                    android:text="Offer valid on first order only"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:background="@color/grey_200"
                    app:layout_constraintTop_toBottomOf="@+id/ratingBarRestaurantItem"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="20dp" android:textColor="@color/purple_700"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="15sp" app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>